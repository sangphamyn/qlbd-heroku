<div class="container">
    <div class="mt-2">
        <div class="row">

            {{#each footballClubs}}
            <div class="col-6 col-md-4 col-lg-3 my-2">
                <div class="card" style="width: 100%">
                    <a href="/all-fb-club/{{this.slug}}" class="d-flex justify-content-center" style="height: 100px;">
                        <img src="{{this.logo}}" class="card-img-top" alt="{{this.name}}" style="height: 100px; width: auto">
                    </a>
                    <div class="card-body">
                        <a href="/all-fb-club/{{this.slug}}">
                            <h5 class="card-title">{{this.name}}</h4>
                        </a>
                        <p class="card-text">{{this.coach}}</p>
                        <a href="/all-fb-club/{{this.slug}}" class="btn btn-primary">Detail hi</a>
                    </div>
                </div>
            </div>
            {{/each}}

        </div>
    </div>
</div>