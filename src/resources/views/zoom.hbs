<div class="container zoom">
    <div class="alert alert-info my-3" role="alert">
        <h3 class="text-center">Tìm Id và password Zoom theo phòng</h3>
    </div>
    <div class="my-4 building">
        <button type="button" class="btn btn-primary" value="2">C2</button>
        <button type="button" class="btn btn-secondary" value="4">C4</button>
        <button type="button" class="btn btn-success" value="5">C5</button>
        <button type="button" class="btn btn-danger" value="6">C6</button>
    </div>
    <div class="room">

    </div>
    <div class="id d-none">
        <h3 class="title alert alert-warning text-center"></h3>
        <div class="alert alert-danger notice d-none" role="alert">
        Đã coppy thành công!
    </div>
        <div class="row">
            <p class="col-3"></p>
            <p class="m-0 col-lg-2">Zoom ID: </p><p id="zoomid" class="m-0 col-12 col-lg-1 text-center"></p>
            <button type="button" class="btn btn-link coppyID col-lg-2">Copy ID</button>
            <p class="col-4"></p>
        </div>
        <div class="row">
            <p class="col-3"></p>
            <p class="m-0 col-lg-2">Zoom password: </p><p id="zoompw" class="m-0 col-12 col-lg-1 text-center"></p>
            <button type="button" class="btn btn-link coppyPW col-lg-2">Copy PW</button>
            <p class="col-4"></p>
        </div>
    </div>
</div>

